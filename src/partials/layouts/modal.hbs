<div class="modal modal-gallery js-modal js-modal-gallery active" id="{{id}}">
    <div class="modal__container">
        <div class="modal__inner">
            <button class="modal__close js-close-modal" type="button" title="Закрыть">
                <svg>
                    <use xlink:href="#close-icon"></use>
                </svg>
            </button>
            <div class="modal-gallery__slider swiper">
                <div class="swiper-wrapper">
                    {{#each media }}
                        <div class="modal-gallery__slide swiper-slide">
                            <img class="lazyload" data-src="{{this.img}}" alt="Фото">
                        </div>
                    {{/each}}
                </div>
            </div>
            <h3 class="modal-gallery__title">«Весенне-полевые работы 2021 года»</h3>
            <a class="modal-gallery__download" download>
                <span>Скачать фотографию</span>
                <img class="lazyload" data-src="img/download-icon.svg" alt="Иконка скачивания">
            </a>
            <span class="modal-gallery__size">5 мб JPG</span>
            <div class="modal-gallery__sub-slider swiper">
                <div class="swiper-wrapper">
                    {{#each media }}
                        <div class="modal-gallery__sub-slide swiper-slide">
                            <div class="modal-gallery__sub-slide-img">
                                <img class="lazyload" data-src="{{this.img}}" alt="Фото">
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>