{{#extend "layout"}}
    {{#content "main"}}

        <section class="intro" style="background: url('img/intro-bg.jpg') no-repeat center; background-size: cover;">
            <div class="container">
                <div class="intro__wrapper">
                    <div class="intro__header">
                        <h1 class="intro__title">РМ АГРО</h1>
                        {{> link-block buttonMod='button--white' buttonText='подробнее' text="Производство качественных колбасных изделий и экологически чистой мясной продукции"}}
                    </div>
                    <div class="intro__body">
                        <a class="intro__video-link" href="#">
                            <button class="intro__video-button">
                                <svg>
                                    <use xlink:href="#arrow-icon"></use>
                                </svg>
                            </button>
                            <img src="img/intro-video.jpg" alt="Фото">
                        </a>
                    </div>
                    <div class="intro__footer">
                        <div class="intro__footer-column">
                            <h3 class="intro__list-title">направления деятельности</h3>
                            <ul class="intro__list">
                                {{#each activities }}
                                    <li class="intro__list-item">
                                        <img src="{{this.img}}" alt="Фото направления">
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="intro__footer-column">
                            <h3 class="intro__list-title">смотреть продукцию</h3>
                            <ul class="intro__list">
                                {{#each products }}
                                    <li class="intro__list-item">
                                        <img src="{{this.img}}" alt="Фото направления">
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="about">
            <div class="container">
                {{> section-header title='о компании' }}
                <div class="about__top">
                    <div class="about__lead">
                        <h3>
                            Одно из ведущих в Российской федерации агропромышленных объединений с замкнутым циклом
                            «От поля до прилавка»
                        </h3>
                    </div>
                    {{> link-block buttonMod='button--green' buttonText='подробнее' text='Специализация: животноводство, производство мясной и молочной продукции и её реализация потребителям' }}
                </div>
                {{> features-slider data=aboutFeatures }}
            </div>
        </section>

    {{/content}}
{{/extend}}